<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/controle"
    tools:context=".Cadastro.CadastroContas">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="CADASTRO DE CONTAS"
        android:textColor="#03122F"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12sp"
            android:textColor="#03122F"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SELECIONE O MES DA CONTA" />

        <Spinner
            android:id="@+id/SpinnerMes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TIPO DE CONTA: "
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/editValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="VALOR DA CONTA: "
            android:inputType="numberSigned"
            android:textColor="@color/colorAccent" />

        <CheckBox
            android:id="@+id/checkboxAtivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="CONTA ATIVA" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:paddingTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnSalvar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="95dp"
            android:background="@android:color/transparent"
            android:textColor="#03122F"
            android:text="VOLTAR" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/btnVoltar"
            android:layout_toRightOf="@+id/btnVoltar"
            android:background="@android:color/transparent"
            android:textColor="#03122F"
            android:text="SALVAR" />

    </LinearLayout>

</LinearLayout>